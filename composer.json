{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "bensampo/laravel-enum": "1.14.*",
        "caffeinated/modules": "4.3.*",
        "doctrine/dbal": "^2.9",
        "fideloper/proxy": "~3.3",
        "laratalks/validator": "^1.1",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "spatie/laravel-permission": "^2.36"
    },
    "require-dev": {
        "codeception/codeception": "^2.5",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan view:clear",
            "php artisan cache:clear",
            "php artisan optimize",
            "php artisan module:optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan view:clear",
            "php artisan cache:clear",
            "php artisan optimize",
            "php artisan module:optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
